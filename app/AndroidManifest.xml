<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:name="com.mrboomdev.binacty.rn.RNApp"
        android:label="@string/app_name"
        android:allowBackup="true"
        android:largeHeap="true"
        android:installLocation="preferExternal"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:banner="@drawable/banner"
        android:roundIcon="@mipmap/ic_launcher"
        android:isGame="true"
        android:appCategory="game"
        android:theme="@style/Binacty">

        <activity
            android:name="com.mrboomdev.binacty.rn.RNActivity"
            android:theme="@style/Binacty.Splash"
            android:screenOrientation="landscape"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="https"
                    android:host="binacty.mrboomdev.ru"
                    android:pathPrefix="/get_pack" />

            </intent-filter>
        </activity>

        <activity
            android:name=".game.GameLauncher"
            android:screenOrientation="landscape"
            android:exported="false" />

        <activity
            android:name="com.facebook.react.devsupport.DevSettingsActivity"
            android:exported="false" />

        <activity
            android:name=".ui.external.FileHandler"
            android:screenOrientation="landscape"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="file"
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.binacty" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="http"
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.binacty" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="https"
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.binacty" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="content"
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.binacty" />
            </intent-filter>
        </activity>

        <service
            android:name=".ui.external.NotificationReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/app_notification" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/boom_primary" />
    </application>
</manifest>
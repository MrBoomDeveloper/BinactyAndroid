<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	 xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:tools="http://schemas.android.com/tools"
	 android:layout_height="wrap_content"
	 android:layout_width="wrap_content"
	 android:orientation="vertical"
	 tools:ignore="HardcodedText,Autofill,UseSwitchCompatOrMaterialXml"
	 android:id="@+id/holder">

	<Button
		 android:layout_height="wrap_content"
		 android:layout_width="wrap_content"
		 android:textAllCaps="false"
		 android:id="@+id/menuTrigger"
		 android:text="Show DevMenu" />

	<ScrollView
		 android:layout_height="300dp"
		 android:layout_width="200dp"
		 android:visibility="gone"
		 android:background="@color/boom_background"
		 android:id="@+id/menu">

		<LinearLayout
			 android:layout_height="match_parent"
			 android:layout_width="match_parent"
			 android:padding="16dp"
			 android:orientation="vertical">

			<TextView
				 android:layout_height="wrap_content"
				 android:layout_width="wrap_content"
				 android:textSize="20sp"
				 android:textColor="#ffffff"
				 android:text="Developer Menu" />

			<Switch
				 android:layout_height="wrap_content"
				 android:layout_width="match_parent"
				 android:layout_marginTop="16dp"
				 android:id="@+id/debugRendererSwitch"
				 android:text="Enable Box2D Debug Renderer" />

			<Switch
				 android:layout_height="wrap_content"
				 android:layout_width="match_parent"
				 android:layout_marginTop="16dp"
				 android:id="@+id/lightsSwitch"
				 android:text="Disable Box2D Lights" />

			<Switch
				 android:layout_height="wrap_content"
				 android:layout_width="match_parent"
				 android:layout_marginTop="16dp"
				 android:id="@+id/editorSwitch"
				 android:text="Force level editor" />

			<Button
				 android:layout_height="40dp"
				 android:layout_width="match_parent"
				 android:textAllCaps="false"
				 android:layout_marginTop="16dp"
				 android:id="@+id/gameOverButton"
				 android:text="Kill main player" />

			<Button
				 android:layout_height="40dp"
				 android:layout_width="match_parent"
				 android:textAllCaps="false"
				 android:layout_marginTop="4dp"
				 android:id="@+id/gainHealthButton"
				 android:text="Gain 5000 hp" />

			<Button
				 android:layout_height="40dp"
				 android:layout_width="match_parent"
				 android:textAllCaps="false"
				 android:layout_marginTop="4dp"
				 android:id="@+id/closeGameButton"
				 android:text="Close game" />

		</LinearLayout>

	</ScrollView>

</LinearLayout>